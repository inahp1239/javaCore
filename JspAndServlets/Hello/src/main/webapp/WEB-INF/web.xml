    <param-name>name</param-name>
    <param-value>NAME</param-value>
  </context-param>
  
  <servlet>
    <description></description>
    <display-name>ConfigAndContext</display-name>
    <servlet-name>ConfigAndContext</servlet-name>
    <servlet-class>com.test.ConfigAndContext</servlet-class>
    
    <init-param>
		<param-name>name</param-name>
		<param-value>Hello</param-value>
	</init-param>
    
  </servlet>
  <servlet-mapping>
    <servlet-name>ConfigAndContext</servlet-name>
    <url-pattern>/ConfigAndContext</url-pattern>
  </servlet-mapping>
</web-app>